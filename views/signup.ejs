<div class="d-flex justify-content-center align-items-center py-5">
    <div class="signup p-4 rounded shadow" style="width: 100%; max-width: 400px;">
      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      <form method="POST" action="/sign-up">
        <div class="mb-3">
          <label for="username" class="form-label">Username: </label>
          <input id="username" name="username" type="text" class="form-control" placeholder="6 characters minimum" value="<%= data ? data.username : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password: </label>
          <input id="password" name="password" type="password" class="form-control" placeholder="8 characters min" required>
        </div>
        <div class="mb-3">
          <label for="firstName" class="form-label">First Name:</label>
          <input id="firstName" name="firstName" type="text" class="form-control" placeholder="John" value="<%= data ? data.firstName : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="lastName" class="form-label">Last Name:</label>
          <input id="lastName" name="lastName" type="text" class="form-control" placeholder="Doe" value="<%= data ? data.lastName : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input id="email" name="email" type="email" class="form-control" placeholder="johndoe123@gmail.com" value="<%= data ? data.email : '' %>" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
      </form>
    </div>
  </div>
  