<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="signup p-4 rounded shadow" style="width: 100%; max-width: 400px;">
        <form method="POST" action="/sign-up">
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input id="username" name="username" type="text" class="form-control" placeholder="JohnDoe1234" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input id="password" name="password" type="password" class="form-control" placeholder="Enter your password" required>
            </div>
            <div class="mb-3">
                <label for="firstName" class="form-label">First Name:</label>
                <input id="firstName" name="firstName" type="text" class="form-control" placeholder="John" required>
            </div>
            <div class="mb-3">
                <label for="lastName" class="form-label">Last Name:</label>
                <input id="lastName" name="lastName" type="text" class="form-control" placeholder="Doe" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input id="email" name="email" type="email" class="form-control" placeholder="johndoe123@gmail.com" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>
    </div>
</div>
